@model IEnumerable<AuctionWebApplication.AuctionService.Category>
@{
    ViewBag.Title = "Categories";
}
<br />
<br />
<h2>Choose a category</h2>
<br />
<br />
<nav class="navbar navbar-default">
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Name)*@
                <p><i><font face="times new roman" , color="#A52A2A" size="4">Items category</font></i></p>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <form form method="get" action="@Url.Action("List", "Auction")">
                        @Html.Label("Search in this category")
                        @Html.TextBox("Search")
                            <input type="submit" value="Search" size="50" width="150" />
                            @Html.ActionLink("See products in this category", "List", "Product", new { CategoryId = item.Id }, null)
</form>
                </td>
            </tr>
        }
    </table>
    </nav>
<br />