@model IEnumerable<AuctionWebApplication.AuctionService.Bid>

@{
    ViewBag.Title = "Index";
}

<h2>All bids on this auction</h2>


<table class="table">
    <tr>
        <th>
            Bid made by
        </th>
        <th>
            Time of the bid
        </th>
        <th>
            Amount
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BidOwner.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>

    }
   


</table>
<div>
    <p>
      @{ 
       
         if(Model.FirstOrDefault().Auction.Active)
          {
                 @Html.ActionLink("Make bid", "Create", "Bid", new { id = Url.RequestContext.RouteData.Values["id"] }, null)
          }
    } 
             
    </p>
</div>
