@model AuctionWebApplication.AuctionService.Auction
@{
    ViewBag.Title = "Create";
}
<br />
<h2>Welcome to Aalborg Auction</h2>
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Please insert the time to start a new auction !</h4>
        <hr />

        <div class="has-error">@TempData["ErrorMessage"]</div>
        <div class=form-group>
            @Html.LabelFor(model => model.StartTime, "Auction Start-Time", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "dd-mm-yyyy       hh:mm" } })
                @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EndTime, "Auction End-Time", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "dd-mm-yyyy       hh:mm" } })
                @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <span class="label label-default">@Html.ActionLink("Back to List", "Index")</span>
</div>
